{
    "name": "TripleBranchWithSpecificConv_manyloss",
    "data_loader": {
        "type": "ImageDataset",
        "args": {
            "alphabet": "alphabet.npy",
            "dataset": {
                "train_data_path": [
                    [
                        "E:/zj/dataset/icdar2015/train/train.txt"
                    ]
                ],
                "train_data_ratio": [
                    1
                ],
                "val_data_path": "E:/zj/dataset/icdar2015/test",
                "input_size": 640,
                "img_channel": 3,
                "shrink_ratio": 0.7,
                "base_dir":"/home/users/zhenyu.yang/data/research/moire/train"
            },
            "loader": {
                "validation_split": 0.1,
                "train_batch_size": 8,
                "val_batch_size": 8,
                "shuffle": true,
                "pin_memory": false,
                "num_workers": 8
            }
        }
    },
    "arch": {
        "type": "PANModel",
        "model_name": "TripleBranchWithSpecificConv",
        "loss_name": "many_loss",
        "args": {
            "backbone": "resnet18",
            "fpem_repeat": 2,
            "pretrained": true,
            "segmentation_head": "FPEM_FFM",
            "is_dct": false,
            "is_light": true
        }
    },
    "loss": {
        "type": "PANLoss",
        "args": {
            "alpha": 0.5,
            "beta": 0.25,
            "delta_agg": 0.5,
            "delta_dis": 3,
            "ohem_ratio": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "seed": 2,
        "gpus": [
            0,1
        ],
        "epochs": 100,
        "display_interval": 10,
        "show_images_interval": 50,
        "resume": {
            "restart_training": true,
            "checkpoint": ""
        },
        "output_dir": "/home/users/zhenyu.yang/data/research/moire_weights",
        "tensorboard": false
    }
}